<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="Json Editor"
            extensions="json"
            icon="icons/sample.gif"
            contributorClass="json.editors.JsonPageEditorContributor"
            class="json.editors.JsonPageEditor"
            id="json.editors.JsonPageEditor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="Json.format"
            name="format">
      </category>
      <command
            categoryId="Json.format"
            description="Format Json Text"
            id="Json.formatText"
            name="Format Text">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:#JsonTextEditorContext?after=additions">
         <command
               commandId="Json.formatText"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeEditorId">
                  <equals
                        value="json.editors.JsonPageEditor">
                  </equals>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="menu:edit?after=additions">
         <command
               commandId="Json.formatText"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeEditorId">
                  <equals
                        value="json.editors.JsonPageEditor">
                  </equals>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="json.handlers.FormatTextHandler"
            commandId="Json.formatText">
      </handler>
   </extension>
   <extension
         id="json.validation.builder"
         name="Json Validator"
         point="org.eclipse.core.resources.builders">
      <builder
            callOnEmptyDelta="false"
            hasNature="false"
            isConfigurable="false">
         <run
               class="json.validation.IncrementalJsonValidator">
         </run>
      </builder>
   </extension>
   <extension
         id="json.validation.nature"
         name="Json Validation Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="json.nature.JsonValidationNature">
         </run>
      </runtime>
      <builder
            id="json.validation.builder">
      </builder>
   </extension>
   <extension
         id="json.validation.marker"
         name="Validation Marker"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <super
            type="org.eclipse.core.resources.textmarker">
      </super>
      <persistent
            value="true">
      </persistent>
      <attribute
            name="key">
      </attribute>
      <attribute
            name="violation">
      </attribute>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="json.prefs.WorkbenchPreferencePage"
            id="json.prefs.WorkbenchPrefencePage"
            name="Json Editor">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            class="json.prefs.ProjectPropertiesPage"
            id="json.prefs.properties"
            name="Json Properties">
         <enabledWhen>
            <adapt
                  type="org.eclipse.core.resources.IProject">
            </adapt>
         </enabledWhen>
      </page>
   </extension>

</plugin>
